@require '~vuepress-plugin-tabs/dist/themes/default.styl'

// global css as stylus
.text-center 
  text-align center

.sub-text 
  color rgb(94, 94, 94)
  font-size 90%

.cursor-pointer
  cursor: pointer

.dark
  color white
  .sub-text
    opacity 0.8
    color: white

.flex
  display: flex
  flex-wrap: wrap

.flex-center
  justify-content  center

.no-decoration
  text-decoration  none

.main-section-disabled
  background-color  grey !important
  color lightgrey !important
  cursor not-allowed !important
  pointer-events none

// hide Hyperion TITLE
.site-name
    display none !important

.no-mp 
  margin 0 !important
  padding 0 !important

// ImageWrap component
.img-margin 
	margin 10px 5px
	p 
		margin 0
.img-shadow
  box-shadow 1px 1px 5px 0 rgba(0,0,0,0.4)

.sidebar .dropdown-wrapper .dropdown-title {
    pointer-events: auto;
}

.tabs-component-tabs {
  border-radius: 0
}

.tabs-component-tab {
  border-radius: 0
  border-color: transparent
  border-bottom-color: #ddd
}

.tabs-component-tab-a {
  padding: 0.5rem 1rem; 
}

.tabs-component-panels {
  border-left: 0
  border-right: 0
  border-bottom: 0
  box-shadow: none
  padding: 0
}

@media (min-width: ($MQMobile + 1px)) {
  .tabs-component-tab.is-active {
    border: solid 1px #ddd
    border-bottom: solid 1px #fff
  }
}

// Dark mode
html.dark
  background-color: $darkPrimaryBg

  body
    color: $darkTextColor !important
    background-color: $darkPrimaryBg

  hr
    border-top-color: $darkBorderColor

  a
    color: $accentColorDark

  .content__default
    code
      color: $accentColorDark
      background-color: $darkSecondaryBg
    a code
      color: $accentColorDark
    pre > code
      color: $darkTextColor

  .custom-block
    p:not(.custom-block-title)
      color: $darkTextColor

  tr
    border-top-color: $darkBorderColor
    &:nth-child(2n)
      background-color: $darkSecondaryBg

  th, td
    border-color: $darkBorderColor

  .page-edit
    .edit-link a, .last-updated .prefix
      color: $accentColorDark

  .sidebar
    background-color: $darkPrimaryBg
    border-right-color: $darkBorderColor
    .sidebar-heading
      color: inherit
    .nav-links
      border-bottom-color: $darkBorderColor
  a.sidebar-link
    color: $darkAltTextColor
    &:hover, &.active
      color: $accentColorDark
      border-left-color: $accentColorDark

  .dropdown-wrapper .nav-dropdown
    background-color: $darkPrimaryBg
    border-color: $darkBorderColor
    h4
      border-top-color: $darkBorderColor
    a
      &:hover, &.router-link-active
        color: $accentColorDark


  .dropdown-wrapper
    .dropdown-title, .mobile-dropdown-title
      color: $darkTextColor

  .navbar
    color: $darkTextColor
    background-color: darken($darkPrimaryBg, 30%)
    border-bottom-color: $darkBorderColor
    .links
      background-color: darken($darkPrimaryBg, 30%)
    .site-name
      color: $darkTextColor

  .nav-links a
    color: $darkTextColor
    &:hover, &.router-link-active
      color: $darkTextColor
      border-bottom-color $accentColorDark

  .search-box
    input, .suggestions
      background-color: $darkSecondaryBg;
      border-color: $darkBorderColor;
    input
      color: $darkTextColor;
      &:focus
        border-color: alpha($accentColorDark, 0.75);
    .suggestion
      &.focused
        background-color: $darkPrimaryBg;
        a
          color: $accentColorDark;
      a
        color: $darkAltTextColor;

  .page-nav .inner
    border-top-color: $darkBorderColor

  .sw-update-popup
    background-color: $darkPrimaryBg

  .custom-block
    &.tip
      color: lighten($tipGreen, 50%)
      background-color: alpha($tipGreen, 0.25)
      .custom-block-title
        color: lighten($tipGreen, 20%)
    &.warning
      color: lighten($warningYellow, 40%)
      background-color: alpha($warningYellow, 0.25)
      .custom-block-title
        color: darken($warningYellow, 20%)
      a
        color: darken($warningYellow, 10%)
    &.danger
      color: lighten($dangerRed, 50%)
      background-color: alpha($dangerRed, 0.25)
      .custom-block-title
        color: lighten($dangerRed, 30%)
      a
        color: lighten($dangerRed, 20%)

  .card
    background-color: #005179

  .tabs-component-tab
    background-color: $darkPrimaryBg

  .tabs-component-panels
    background-color: $darkPrimaryBg
